@model Otlob.Core.ViewModel.ApplicationUserlVM

@{
    ViewData["Title"] = "Register";
}
@section Register {
    <partial name="_RegisterPagePartial"></partial>
}

<form asp-action="Register">
    <h2>Create an account</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <input asp-for="UserName" placeholder="UserName"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="Address" placeholder="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="PhoneNumber" placeholder="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <button type="submit">Create your account</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
